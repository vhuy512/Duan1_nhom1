<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="560dp"
    android:background="@drawable/custem_edittext">

    <EditText
        android:id="@+id/edtTenNhaDat"
        android:layout_width="303dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/custom_backgroud"
        android:drawablePadding="15dp"
        android:ems="10"
        android:fontFamily="@font/chakrapetch"
        android:hint="Tên giới thiệu"
        android:inputType="textPersonName"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="15dp"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtGiaTien"
        android:layout_width="303dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_backgroud"
        android:drawablePadding="15dp"
        android:ems="10"
        android:fontFamily="@font/chakrapetch"
        android:hint="Giá tiền"
        android:inputType="number"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="15dp"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/edtDiaChi"
        app:layout_constraintTop_toBottomOf="@+id/edtDiaChi" />

    <Button
        android:id="@+id/btnThemNhaDat"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_buttom_them_nha_dat"
        android:fontFamily="@font/bree_serif"
        android:text="Thêm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/edtMoTa"
        app:layout_constraintTop_toBottomOf="@+id/edtMoTa" />

    <EditText
        android:id="@+id/edtDiaChi"
        android:layout_width="303dp"
        android:layout_height="54dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/custom_backgroud"
        android:drawablePadding="15dp"
        android:ems="10"
        android:fontFamily="@font/chakrapetch"
        android:hint="Địa chỉ"
        android:inputType="textPersonName"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="15dp"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/spinnerTinhThanh"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTinhThanh" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_buttom_them_nha_dat"
        android:fontFamily="@font/bree_serif"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/edtMoTa"
        app:layout_constraintTop_toBottomOf="@+id/edtMoTa" />

    <EditText
        android:id="@+id/edtDienTich"
        android:layout_width="303dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_backgroud"
        android:drawablePadding="15dp"
        android:ems="10"
        android:fontFamily="@font/chakrapetch"
        android:hint="Diện tích"
        android:inputType="textPersonName"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="15dp"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/edtGiaTien"
        app:layout_constraintTop_toBottomOf="@+id/edtGiaTien" />

    <EditText
        android:id="@+id/edtMoTa"
        android:layout_width="303dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_backgroud"
        android:drawablePadding="15dp"
        android:ems="10"
        android:fontFamily="@font/chakrapetch"
        android:hint="Mô tả"
        android:inputType="textPersonName"
        android:lineSpacingExtra="8sp"
        android:paddingLeft="15dp"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="@+id/edtDienTich"
        app:layout_constraintTop_toBottomOf="@+id/edtDienTich" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/chakrapetch"
        android:text="Thêm nhà đất"
        android:textColor="#050505"
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerTinhThanh"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/edtTenNhaDat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTenNhaDat" />

</androidx.constraintlayout.widget.ConstraintLayout>